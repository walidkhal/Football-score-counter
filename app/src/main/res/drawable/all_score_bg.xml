<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#878787"
                android:centerColor="#fefafb"
                android:endColor="#8d8d8b"
                android:type="linear" />
            <padding android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" ></padding>
            <corners android:radius="10dp" ></corners>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:type="radial"
                android:gradientRadius="150dp"
                android:startColor="#a2a6b1"
                android:endColor="#273460"
                android:centerY="0.2"></gradient>
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>