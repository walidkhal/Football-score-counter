<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="@color/silver_gradient_start"
                android:centerColor="@color/silver_gradient_center"
                android:endColor="@color/silver_gradient_end"
                android:type="linear" />
            <padding android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" ></padding>
            <corners android:radius="10dp" ></corners>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:type="radial"
                android:gradientRadius="150dp"
                android:startColor="@color/blue_gradient_start"
                android:endColor="@color/blue_gradient_end"
                android:centerY="0.2"></gradient>
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>